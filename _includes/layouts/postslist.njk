<ol reversed class="postlist" style="counter-reset: start-from {{ postslist.length + 1 }}">
{% for post in postslist | reverse %}
  <li class="">
    <a href="{{ post.url | url }}" class="">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
    <time class="" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>
    {% for tag in post.data.tags %}
      {%- if tag != "posts" -%}
      {% set tagUrl %}/tags/{{ tag }}/{% endset %}
      <a href="{{ tagUrl | url }}" class="">{{ tag }}</a>
      {%- endif -%}
    {% endfor %}
    <p>
    {{ post.templateContent | striptags(true) | truncate(280) }}<a href="{{ post.url | url }}">READ MORE</a>
    </p>
    <br>
    {% if post.data.image %}
    <img alt="default post image" src="{{ post.data.image }}" class="lg:w-full">
    {% endif %}
  </li>
{% endfor %}
</ol>